<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/netScroll"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:id="@+id/linear_Call"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/draw_call"
                        android:layout_width="55dp"
                        android:layout_height="52dp"
                        android:layout_marginTop="6dp"
                        />

                    <TextView
                        android:id="@+id/tv_Call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="#646464"
                        android:textSize="13sp"
                        />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center_vertical"
                    />

                <LinearLayout
                    android:id="@+id/linear_Msg"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/draw_msg"
                        android:layout_width="55dp"
                        android:layout_height="52dp"
                        android:layout_marginTop="6dp"
                        />

                    <TextView
                        android:id="@+id/tv_Msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="#646464"
                        android:textSize="13sp"
                        />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center_vertical"
                    />

                <LinearLayout
                    android:id="@+id/linear_Alarm"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/draw_alarm"
                        android:layout_width="55dp"
                        android:layout_height="52dp"
                        android:layout_marginTop="6dp"
                        />

                    <TextView
                        android:id="@+id/tv_alarm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="#646464"
                        android:textSize="13sp"
                        />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:text="语言"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_Laungauge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

            </android.support.v7.widget.RecyclerView>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:text="风格"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_Style"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:text="主题"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_Theme"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>